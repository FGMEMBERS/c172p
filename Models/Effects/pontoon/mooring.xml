<PropertyList>

	<path>mooring.ac</path>

	<offsets>
		<pitch-deg>-0.6</pitch-deg>
		<z-m>0.05</z-m>
	</offsets>

    <animation>
        <type>select</type>
        <object-name>mooring</object-name>
        <condition>
            <property>fdm/jsbsim/mooring/anchor-length</property>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>mooringrope</object-name>
        <condition>
            <property>fdm/jsbsim/mooring/mooring-connected</property>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>mooring</object-name>
        <object-name>mooringrope</object-name>
        <property>orientation/roll-deg</property>
        <factor>1</factor>
        <center>
            <x-m>-1.57719</x-m>
            <y-m> 0.01445</y-m>
            <z-m>-1.69702</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>mooring</object-name>
        <object-name>mooringrope</object-name>
        <property>orientation/pitch-deg</property>
        <offset-deg>-1.8</offset-deg>
        <factor>-1</factor>
        <center>
            <x-m>-1.57719</x-m>
            <y-m> 0.01445</y-m>
            <z-m>-1.69702</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>


</PropertyList>
