<?xml version="1.0"?>


<system name="Mooring-Control">

    <channel  name="Mooring">
        <switch name="systems/mooring-control">
            <default value="fcs/mooring-cmd-norm"/>
            <test logic="OR" value="0">
                ground/solid == 1
                propulsion/engine[0]/set-running  == 1
                propulsion/engine[1]/set-running  == 1
            </test>
            <test  logic="AND" value="1">
                simulation/sim-time-sec gt 2
                ground/solid == 0
                position/h-agl-ft lt 40
                propulsion/engine[0]/set-running  == 0
                propulsion/engine[1]/set-running  == 0
                fcs/mooring-cmd-norm == 1
            </test>
            <output>fcs/mooring-cmd-norm</output>
        </switch>

        <switch name="systems/mooring-gear-cmd-norm">
            <default value="systems/gear/gear-cmd-norm"/>
            <test  logic="AND" value="0">
                fcs/mooring-cmd-norm == 1
            </test>
            <output>systems/gear/gear-cmd-norm</output>
        </switch>
    </channel>

</system>
